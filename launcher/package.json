{
  "name": "ffb-launcher",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build:ts": "tsc",
    "build:assets": "node scripts/copy-assets.js",
    "build": "npm run build:ts && npm run build:assets",
    "build:watch": "concurrently \"tsc -w\" \"node scripts/copy-assets.js --watch\"",
    "dev": "concurrently \"npm:build:watch\" \"electron .\"",
    "dist": "npm run build && electron-builder"
  },

  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.0"
  },
  "build": {
    "appId": "com.ffb.launcher",
    "productName": "FFB Launcher",
    "directories": { "output": "release" },
    "files": ["dist/**/*", "package.json"],
    "win": { "target": ["nsis"] }
  }
}
